<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/info_bg">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_tx"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:placeholderImage="@drawable/tx"
        fresco:roundAsCircle="true"
        android:src="@drawable/tx"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_tx"
        android:text="V 1.0"
        android:textColor="@color/colorGray"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="昵称："
        android:layout_above="@+id/my_score"
        android:layout_toLeftOf="@+id/my_name"
        android:layout_toStartOf="@+id/my_name" />
    <TextView
        android:id="@+id/my_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_version"
        android:text=" "
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/btn_editor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/editor"
        android:layout_above="@+id/my_score"
        android:layout_toRightOf="@+id/my_name"
        android:layout_toEndOf="@+id/my_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="成功："
        android:layout_alignBaseline="@+id/my_score"
        android:layout_alignBottom="@+id/my_score"
        android:layout_toLeftOf="@+id/my_score"
        android:layout_toStartOf="@+id/my_score" />
    <TextView
        android:id="@+id/my_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_name"
        android:text=" "
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="失败："
        android:layout_alignBaseline="@+id/my_failure"
        android:layout_alignBottom="@+id/my_failure"
        android:layout_toLeftOf="@+id/my_failure"
        android:layout_toStartOf="@+id/my_failure" />
    <TextView
        android:id="@+id/my_failure"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_score"
        android:text=" "
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="道具："
        android:layout_alignBaseline="@+id/my_boom"
        android:layout_alignBottom="@+id/my_boom"
        android:layout_toLeftOf="@+id/my_boom"
        android:layout_toStartOf="@+id/my_boom" />
    <TextView
        android:id="@+id/my_boom"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_failure"
        android:text=" "
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="状态："
        android:layout_alignBaseline="@+id/my_status"
        android:layout_alignBottom="@+id/my_status"
        android:layout_toLeftOf="@+id/my_status"
        android:layout_toStartOf="@+id/my_status" />
    <TextView
        android:id="@+id/my_status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_boom"
        android:text=" "
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        android:text="存活："
        android:layout_alignBaseline="@+id/my_time"
        android:layout_alignBottom="@+id/my_time"
        android:layout_toLeftOf="@+id/my_time"
        android:layout_toStartOf="@+id/my_time" />
    <TextView
        android:id="@+id/my_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/my_status"
        android:text="00-00-00"
        android:textColor="@color/colorGray"
        android:textSize="16sp"
        />
</RelativeLayout>
